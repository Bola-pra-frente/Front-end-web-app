{
  "version": 2,
  "buildCommand": "npm run build:css",
  "builds": [
    {
      "src": "api/vercel.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**", "prisma/**", "public/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1",
      "headers": {
        "Content-Type": "text/css"
      }
    },
    {
      "src": "/img/(.*)",
      "dest": "/public/img/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/vercel.ts"
    }
  ]
}
