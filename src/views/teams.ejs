<%- include('layouts/base-no-footer', {
    title: title,
    description: description,
    user: user,
    body: `
        <!-- Header Section -->
        <section class="bg-white py-12">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="text-center">
                    <h1 class="text-4xl font-bold text-gray-900 mb-4">Times</h1>
                    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                        Explore os times cadastrados em nossa plataforma
                    </p>
                </div>
            </div>
        </section>

        <!-- Teams Grid -->
        <section class="py-12">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Loading State -->
                <div id="loading" class="text-center py-12">
                    <div class="loading mx-auto mb-4"></div>
                    <p class="text-gray-600">Carregando times...</p>
                </div>

                <!-- Teams Grid -->
                <div id="teams-grid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 hidden">
                    <!-- Teams will be loaded here -->
                </div>

                <!-- Empty State -->
                <div id="empty-state" class="text-center py-12 hidden">
                    <svg class="w-24 h-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2">Nenhum time encontrado</h3>
                    <p class="text-gray-600">Seja o primeiro a cadastrar um time!</p>
                </div>
            </div>
        </section>

        <script>
            // Load teams on page load
            document.addEventListener('DOMContentLoaded', function() {
                loadTeams();
            });

            // Load teams function
            async function loadTeams() {
                const loading = document.getElementById('loading');
                const teamsGrid = document.getElementById('teams-grid');
                const emptyState = document.getElementById('empty-state');

                loading.classList.remove('hidden');
                teamsGrid.classList.add('hidden');
                emptyState.classList.add('hidden');

                try {
                    const response = await fetch('/api/teams?limit=20', {
                        credentials: 'include'
                    });

                    if (response.ok) {
                        const data = await response.json();
                        displayTeams(data.teams);
                        
                        if (data.teams.length === 0) {
                            emptyState.classList.remove('hidden');
                        } else {
                            teamsGrid.classList.remove('hidden');
                        }
                    } else {
                        throw new Error('Erro ao carregar times');
                    }
                } catch (error) {
                    console.error('Erro:', error);
                    emptyState.classList.remove('hidden');
                } finally {
                    loading.classList.add('hidden');
                }
            }

            // Display teams
            function displayTeams(teams) {
                const grid = document.getElementById('teams-grid');
                grid.innerHTML = '';

                teams.forEach(team => {
                    const teamCard = \`
                        <div class="card hover:shadow-lg transition-shadow">
                            <div class="text-center">
                                <div class="w-20 h-20 bg-gradient-primary rounded-full flex items-center justify-center mx-auto mb-4">
                                    <span class="text-2xl font-bold text-white">
                                        \${team.name.charAt(0)}
                                    </span>
                                </div>
                                <h3 class="text-xl font-semibold text-gray-900 mb-2">\${team.name}</h3>
                                \${team.city ? \`<p class="text-gray-600 mb-2">\${team.city}\${team.state ? ', ' + team.state : ''}</p>\` : ''}
                                \${team.description ? \`<p class="text-gray-600 text-sm mb-4">\${team.description.substring(0, 100)}...</p>\` : ''}
                                <div class="flex justify-center space-x-2 mb-4">
                                    <span class="badge badge-primary">\${team._count.players} jogadoras</span>
                                    <span class="badge badge-success">\${team._count.posts} posts</span>
                                </div>
                                <a href="/teams/\${team.id}" class="btn btn-primary">Ver Detalhes</a>
                            </div>
                        </div>
                    \`;
                    grid.innerHTML += teamCard;
                });
            }
        </script>
    `
}) %>
